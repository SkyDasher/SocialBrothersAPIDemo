@model SocialBrothersAPIDemo.Models.Adres

@{
    ViewData["Title"] = "AdresTable";
}

<h1>AdresTable</h1>

<div>
    <h4>Adres Table</h4>
    <div>
        <label>Search</label>
        <input type="text" class="form-control" id="txtSearch" />
    </div>
    <div id="grdAdressen"></div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(() => {
        getAdressen();

        $('#txtSearch').on('keyup', () => {
            getAdressen()
        });
    });

    function getAdressen() {
        $.ajax({
            url: '@Url.Action("SearchAdressen", "AdresTable")',
            dataType: 'html',
            method: 'GET',
            data: { searchText: $('#txtSearch').val() },
            success: function (res) {
                $('#grdAdressen').html('').html(res);
            },
            error: function (err) {
                console.log(err);
            }

        })
    }
</script>
